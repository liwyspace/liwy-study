<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!-- MyBatis代码生成器配置文件 -->
<generatorConfiguration>
    <!-- 配置文件 -->
    <properties resource="config-jdbc.properties"></properties>

    <context id="MySqlContext" targetRuntime="MyBatis3" defaultModelType="flat">
        <property name="javaFileEncoding" value="UTF-8" />
        <!-- 由于beginningDelimiter和endingDelimiter的默认值为双引号(")，在Mysql中不能这么写，所以还要将这两个默认值改为`  -->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!-- 为生成的Java模型创建一个toString方法 -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"></plugin>

        <!-- Java模型生成equals和hashcode方法 -->
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"></plugin>

        <!-- 生成的代码去掉注释 -->
        <commentGenerator type="com.liwy.study.mybatis.generator.ModelCommentGenerator">
            <property name="suppressAllComments" value="true" />
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!-- 数据库连接 -->
        <jdbcConnection driverClass="${dev_db_driver}"
                        connectionURL="${dev_db_url}"
                        userId="${dev_db_username}"
                        password="${dev_db_password}">
        </jdbcConnection>

        <!-- Model 生成器 -->
        <javaModelGenerator targetPackage="com.liwy.study.mybatis.generator.temp.entity" targetProject="src/main/java"/>

        <!-- SqlMap生成器 -->
        <sqlMapGenerator targetPackage="com.liwy.study.mybatis.generator.temp.dao.mapper"  targetProject="src/main/java"/>

        <!-- 接口生成器 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.liwy.study.mybatis.generator.temp.dao"  targetProject="src/main/java"/>

        <table tableName="liwy_channel" domainObjectName="LiwyChannel" />
        <table tableName="liwy_content" domainObjectName="LiwyContent" />

    </context>
</generatorConfiguration>