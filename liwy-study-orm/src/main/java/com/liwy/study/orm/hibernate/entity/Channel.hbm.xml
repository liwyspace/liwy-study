<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.liwy.study.hibernate.entity">

    <class name="com.liwy.study.orm.hibernate.entity.Channel" table="liwy_channel">
        <id name="id" column="id">
            <generator class="increment" />
        </id>
        <property name="parentId" column="parent_id" type="integer" />
        <property name="priority" column="priority" type="integer"/>
        <property name="name" column="name" type="string"/>
        <property name="isBlank" column="is_blank" type="byte"/>
    </class>

</hibernate-mapping>